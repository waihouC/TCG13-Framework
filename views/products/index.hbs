{{#extends "base"}}

{{#block "content"}}
<h1>All Products</h1>
<a href="/products/create" class="btn btn-primary">Create Product</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Category</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.name}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    {{this.category.name}} {{!-- access category function in models index.js --}}
                </td>
                <td>
                    {{#each this.tags}}
                        <span class="badge bg-primary">{{this.name}}</span>
                    {{/each}}
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/products/{{this.id}}/update">Update</a>
                    <a class="btn btn-danger btn-sm" href="/products/{{this.id}}/delete">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}